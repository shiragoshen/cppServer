{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++11",
                "server.cpp",
                "-o",
                "server"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "build client",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++11",
                "client.cpp",
                "-o",
                "client"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
