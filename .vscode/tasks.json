{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server",
            "type": "shell",
            "command": "clang++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-pthread",
                "${workspaceFolder}/handle_client.cpp",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/recommendations.cpp",
                "${workspaceFolder}/record_history.cpp",
                "-o",
                "${workspaceFolder}/server"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
